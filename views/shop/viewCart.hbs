<!DOCTYPE html>
<html>
<head>
    <link rel='stylesheet' href='/stylesheets/style1.css'/>
</head>
<body>
<div class="row">
{{# if products }}
        <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
            <ul class="list-group">
                {{# each messages }}
                    <div class="alert alert-danger">
                        <p>{{this}}</p>
                    </div>
                {{/each}}
                {{# each products}}
                    <li class="list-group-item">
                        <span class="badge">{{this.qty}}</span>
                        <strong>{{this.item.title}}</strong>
                        <span class="label label-success">{{this.price}}</span>
                        <!-- Single button -->

                    </li>

                {{/each}}
            </ul>
        </div>

        <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
            <strong>Total Price :{{this.totalPrice}} </strong>
        </div>
        <br><br>

        <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
            <a href="/send_payment" class="btn btn-success">Ð¡onfirmation</a>
        </div>
    </div>

{{else}}

    <div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
        <h3>No Product in Cart!</h3>
    </div>
{{/if}}

</div>
</body>
</html>

